# Staging Environment Configuration
# This configuration allows running without Redis for staging environments

# Database Configuration (MySQL)
DATABASE_URL=mysql://username:password@localhost:3306/waitlist_management_staging
DB_HOST=localhost
DB_PORT=3306
DB_NAME=waitlist_management_staging
DB_USER=root
DB_PASSWORD=integra
DB_SSL=false

# Test Database
DB_NAME_TEST=waitlist_management_test

# Redis Configuration - MOCK MODE ENABLED
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# Enable mock Redis for staging without Redis server
MOCK_REDIS=true npm run dev

# JWT Configuration
JWT_SECRET=staging-jwt-secret-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3000
NODE_ENV=staging

# SendGrid Configuration (for email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@staging.yourdomain.com

# Twilio Configuration (for SMS and WhatsApp notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# Base URL for confirmation links
BASE_URL=http://localhost:3000

# Google Calendar Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Notification Rate Limiting (per tenant per hour) - Disabled in mock mode
NOTIFICATION_RATE_LIMIT=25

# Slot Hold Duration (minutes)
SLOT_HOLD_DURATION=10

# Token Expiry (minutes)
CONFIRMATION_TOKEN_EXPIRY=15

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_INPUT_SANITIZATION=true
ENABLE_SQL_INJECTION_PREVENTION=true

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_INTERVAL_HOURS=24
ENABLE_AUTO_BACKUP=false

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_INTERVAL_MINUTES=5

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90